<Project Sdk="Microsoft.NET.Sdk.Razor">
	<PropertyGroup>
		<TargetFrameworks>netstandard2.0;net6.0</TargetFrameworks>
		<RazorLangVersion>3.0</RazorLangVersion>
		<LangVersion>9.0</LangVersion>
		<Nullable>enable</Nullable>
		<Description>Provides core functionalities for handling AJAX form submissions with zero or more files, and report back data upload progress. It supports automatic form (UI) generation from metadata-decorated .NET object models. It also supports easy integration of Google's reCAPTCHA technology and the Quill Rich Text Editor (https://quilljs.com).</Description>
		<Copyright>Â© 2020 Karfamsoft. All rights reserved.</Copyright>
		<Authors>Abdourahamane Kaba</Authors>
		<Company>Karfamsoft</Company>
		<PackageLicenseExpression>Apache-2.0+</PackageLicenseExpression>
		<NeutralLanguage>en-US</NeutralLanguage>
		<PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<RepositoryUrl>https://github.com/bigabdoul/BlazorFormManager</RepositoryUrl>
		<RepositoryType>Git</RepositoryType>
		<PackageTags>c#, .net, razor, class, library, blazor, blazorformmanager, form, form-manager, forms, javascript, interop, xmlhttprequest, client, server, reCAPTCHA, quilljs, rich, text, editor</PackageTags>
		<PackageProjectUrl>https://github.com/bigabdoul/BlazorFormManager</PackageProjectUrl>
		<PackageReleaseNotes>
			Issues addressed in release 3.0.1
			
			- Fixed systemjs scripts loading randomly causing the BlazorFormManager object not being 
			  available when a form component is first rendered.
			  
			For quick usage, read https://github.com/bigabdoul/BlazorFormManager/blob/master/README.md.
		</PackageReleaseNotes>
		<Version>3.0.1</Version>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<DocumentationFile>$(ProjectDir)\src\BlazorFormManager\bin\Debug\$(TargetFramework)\BlazorFormManager.xml</DocumentationFile>
		<DefineConstants>TRACE</DefineConstants>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.TypeScript.MSBuild" Version="3.9.7">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
	</ItemGroup>
	
	<ItemGroup>
		<Compile Remove="Collections\**" />
		<Compile Remove="ComponentModel\**" />
		<Content Remove="Collections\**" />
		<Content Remove="ComponentModel\**" />
		<EmbeddedResource Remove="Collections\**" />
		<EmbeddedResource Remove="ComponentModel\**" />
		<None Remove="Collections\**" />
		<None Remove="ComponentModel\**" />
	</ItemGroup>

	<ItemGroup>
		<Compile Remove="LocalStorage.cs" />
		<Compile Remove="SelectOption.cs" />
		<Compile Remove="SelectOptionList.cs" />
		<Compile Remove="TypeExtensions.cs" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
		<PackageReference Include="Microsoft.AspNetCore.Components" Version="3.1.6" />
		<PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="3.1.6" />
		<PackageReference Include="Microsoft.Bcl.AsyncInterfaces" Version="6.0.0" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'net6.0'">
		<PackageReference Include="Microsoft.AspNetCore.Components" Version="6.0.1" />
		<PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="6.0.1" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Carfamsoft.Model2View\src\Carfamsoft.Model2View.Annotations.Core\Carfamsoft.Model2View.Annotations.Core.csproj" />
		<ProjectReference Include="..\Carfamsoft.Model2View\src\Carfamsoft.Model2View.Annotations\Carfamsoft.Model2View.Annotations.csproj" />
		<ProjectReference Include="..\Carfamsoft.JSInterop\Carfamsoft.JSInterop.csproj" />
	</ItemGroup>

</Project>
