@attribute [Authorize]
@page "/account/autoeditform"
@page "/account/autoeditform/{ModelId}"
@using BlazorFormManager.Demo.Client.Extensions

<AutoEditForm Model="Model" FormAction="api/account/update" RequestHeaders="RequestHeaders" OnSubmitDone="Manager.ProcessCustomServerResponse" OptionsGetter="GetOptions" EnableRichText @ref="Manager">
    <FormHeader>
        <DemoHeader Title="Auto Edit Form Demo" LogLevel="LogLevel" OnLogLevelChanged="level => Manager.SetLogLevelAsync(level)" />
    </FormHeader>
    <AfterDisplayGroups>
        <hr />
        <SubmitButton Manager="Manager" Text="Update" />
    </AfterDisplayGroups>
    <ChildContent>
        <DynamicPhoto Controller="account" ModelId="Model.Id" />
        <CustomInputFile Name="Photo" />
        <DataAnnotationsValidator />
    </ChildContent>
</AutoEditForm>
